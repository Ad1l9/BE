@model List<Position>
@{
    int count = 0;
}
<h4 class="card-title">Categories</h4>
<a class="btn btn-success btn-info" asp-action="Create">Create Position</a>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    No
                </th>
                <th>
                    Name
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Position position in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @position.Name
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="Position" asp-route-id="@position.Id" class="btn btn-warning btn-info"> <i class="mdi mdi-pencil"></i> Update</a>
                    
                        <a asp-action="Delete" asp-controller="Position" asp-route-id="@position.Id" class="btn btn-danger btn-info"> <i class="mdi mdi-delete"></i> Delete</a>

                        <a asp-action="Detail" asp-controller="Position" asp-route-id="@position.Id" class="btn btn-primary btn-info"> <i class="mdi mdi-open-in-new"></i> Details</a>
                    </td>
                </tr>


            }

        </tbody>
    </table>
</div>